{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "myj",
  "version": "0.1.0",
  "identifier": "cn.coderbox.smart-card",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "墨因笺",
        "url": "/init",
        "width": 910,
        "height": 670,
        "decorations": false,
        "visible": false
      },
      {
        "title": "更新和升级",
        "label": "splashscreen",
        "url": "splashscreen/splashscreen.html",
        "width": 640,
        "height": 480,
        "minWidth": 640,
        "minHeight": 480,
        "decorations": false,
        "visible": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**/**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
